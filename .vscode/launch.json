{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug SDL2 Game (Makefile)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/game.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe", // <-- chỉnh đúng đường dẫn gdb nếu cần
        "setupCommands": [
          {
            "description": "Enable pretty-printing",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  